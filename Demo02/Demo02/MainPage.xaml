<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo02.MainPage">

    <StackLayout>
        <Button Text="Mi primer botón"/>
        <Label Text="Mi primer labell"/>
        <Entry Text="Mi Primer Entry"/>
        <Editor Text="Mi Primer Editor" HeightRequest="100"/>
        <DatePicker Date="05/04/2022" MaximumDate="03/05/2022" MinimumDate="03/01/2022"/>

        <Editor Text="Fecha Nacimiento" HeightRequest="100"/>
        <DatePicker x:Name="dtpFechaNacimiento" Date="05/04/2022" MinimumDate="03/05/1988" MaximumDate="03/01/2022"/>
        <Label Text="Numero 1"/>
        <Entry x:Name="txtNumero1" ></Entry>
        <Label Text="Numero 2"/>
        <Entry x:Name="txtNumero2" ></Entry>
        <Button Text="Sumar" Clicked="Button_Clicked"></Button>
        <Button Text="Restar" Clicked="Button_Clicked_1"></Button>
        <Button Text="Multiplicar" Clicked="Button_Clicked_2"></Button>

        <Button Text="Multiplicar" Clicked="Button_Clicked_3"></Button>
        <Label x:Name="lblSuma" FontSize="20" BackgroundColor="Azure" ></Label>
        <Label x:Name="lblResta" FontSize="20" BackgroundColor="Azure" ></Label>
        <Label x:Name="lblMultiplica" FontSize="20" BackgroundColor="Azure"></Label>

        <Label x:Name="lblEdad" FontSize="20" BackgroundColor="Azure"></Label>



    </StackLayout>

</ContentPage>
