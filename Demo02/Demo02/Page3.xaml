<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo02.Page3">
    <ContentPage.Content>
        <ScrollView Orientation="Horizontal">
        <Grid>
            
            
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <Button Text="Hola" BackgroundColor="Red"  Grid.Column="0" Grid.Row="0"/>
            <Button Text="Hola" BackgroundColor="Green"  Grid.Column="2" Grid.Row="1"/>
            <Button Text="Hola" BackgroundColor="Yellow" 
                    Grid.ColumnSpan="3"
                    Grid.Column="0"
                    Grid.Row="2"/>
            <Button Text="Hola" BackgroundColor="Orange"  Grid.Column="2" Grid.Row="3"/>


        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>